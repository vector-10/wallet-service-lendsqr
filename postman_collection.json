{
  "info": {
    "name": "Demo Credit - Wallet Service",
    "description": "Lendsqr assessment wallet service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const json = pm.response.json();",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "  console.log('Token saved from register');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"bvn\": \"22345678901\",\n  \"phone\": \"08012345678\",\n  \"password\": \"Password123!\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "  console.log('Token saved from login');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"Password123!\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Register - duplicate email (expect 409)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"bvn\": \"22345678903\",\n  \"phone\": \"08011111111\",\n  \"password\": \"Password123!\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Login - wrong password (expect 400)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"wrongpassword\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Login - missing fields (expect 400)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\"\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Get Balance",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/balance",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "balance"]
            }
          }
        },
        {
          "name": "Fund Wallet",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/fund",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "fund"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 5000\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Transfer",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/transfer",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "transfer"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiver_email\": \"jane.doe@example.com\",\n  \"amount\": 1000\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Withdraw",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/withdraw",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "withdraw"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Transaction History",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/transactions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "transactions"]
            }
          }
        },
        {
          "name": "Fund - invalid amount (expect 400)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/fund",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "fund"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": -100\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Transfer - to yourself (expect 422)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/transfer",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "transfer"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiver_email\": \"john.doe@example.com\",\n  \"amount\": 100\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Withdraw - insufficient funds (expect 422)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/withdraw",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "withdraw"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 999999\n}",
              "options": { "raw": { "language": "json" } }
            }
          }
        },
        {
          "name": "Balance - no token (expect 401)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/wallet/balance",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "wallet", "balance"]
            }
          }
        }
      ]
    }
  ]
}
